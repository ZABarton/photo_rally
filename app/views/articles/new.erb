<h1>Make a new ARFticle!</h1>


<% if @errors %>
<h2>Oops! Someone dropped the ball.</h2>
  <% @errors.each do |error| %>
    <h3 style="color:red"><%= error %></h3>
  <% end %>
<% end %>
<form action="/categories/<%= @category.id %>/articles" method="POST">
  Name: <input type="text" name="article[name]" value="<%= @article.name %>">
  Description: <input type="text" name="article[description]" value="<%= @article.description %>">
  Price: <input type="number" name="article[price]" value="<%= @article.price %>">
  <input type="submit" value="Create ARFticle">
</form>